######################################################################
# Defines common variables for ORBIT executable creation
######################################################################

# orbit executable name

orbit_main = $(ORBIT_ROOT)/bin/pyORBIT

# library locations and names

LIBS  =

#-------------------------------------------------------------------------------
# PYTHON_ROOT_LIB - specify the name of the python library including full path.
#   It is usually
#   /usr/lib/python$(PYTHON_VERSION)/config/libpython$(PYTHON_VERSION).a
#-------------------------------------------------------------------------------

LIBS += $(PYTHON_ROOT_LIB)
LIBS += -ldl -lreadline -ltermcap -lpthread -lutil -lm -Xlinker -export-dynamic
LIBS += -L$(MPI_ROOT)/lib -lmpich

#include file locations

INCLUDES  =

#-------------------------------------------------------------------------------
#PYTHON_ROOT_INC  - specify the location of the python header files.
#It is usually /usr/include/python$(PYTHON_VERSION)
#-------------------------------------------------------------------------------

INCLUDES += -I$(PYTHON_ROOT_INC)
INCLUDES += -I$(MPI_ROOT)/include

include  ${ORBIT_ROOT}/conf/${ORBIT_ARCH}/make_root_config
